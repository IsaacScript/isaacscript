// This is a tsconfig.json intended to be used by packages in this monorepo. It is designed to be
// extended from in addition to the appropriate environment tsconfig (e.g. Node, browser, etc.).
{
  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    // TSTL requires the "baseUrl" option when "paths" is specified. (It cannot be in the
    // project-specific "tsconfig.json" file either.)
    "baseUrl": ".",

    "paths": {
      "isaacscript-common": ["./packages/isaacscript-common/src/index.ts"],
      "isaacscript-common-node": [
        "./packages/isaacscript-common-node/src/index.ts",
      ],
      "isaacscript-common-ts": [
        "./packages/isaacscript-common-ts/src/index.ts",
      ],
    },
  },
}

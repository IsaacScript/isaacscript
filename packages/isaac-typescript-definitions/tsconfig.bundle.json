{
  "extends": "./tsconfig.json",

  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    // We want the only output to be the bundled Lua file.
    "declaration": false,
    "declarationMap": false,
  },

  // TypeScriptToLua settings
  "tstl": {
    "luaTarget": "5.3",
    "luaBundle": "isaac-typescript-definitions.lua", // Will bundle all output Lua files into a single file.
    "luaBundleEntry": "./src/index.ts",
    "luaPlugins": [
      // A plugin to add an explanatory comment at the top of the compiled "main.lua" file (for
      // `isaac-typescript-definitions` specifically).
      {
        "name": "../isaacscript-cli/src/plugins/addIsaacScriptCommentHeaderDefinitions.ts",
      },

      // A plugin to make enums safe from global variables.
      {
        "name": "../isaacscript-cli/src/plugins/noExtendedEnums.ts",
      },
    ],
    "noHeader": true,
    "noImplicitGlobalVariables": true,
  },
}

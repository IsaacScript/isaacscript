// A TypeScript configuration file for Docusaurus. It is not used for compilation. It is just used
// by VSCode.
{
  "extends": [
    "../isaacscript-tsconfig/tsconfig.node.json",
    // https://github.com/tsconfig/bases/blob/main/bases/docusaurus.json
    "@tsconfig/docusaurus/tsconfig.json",
  ],

  "compilerOptions": {
    "outDir": "build",
  },

  "include": [
    "./**/*.js",
    "./**/.*.js",
    "./**/*.cjs",
    "./**/.*.cjs",
    "./**/*.mjs",
    "./**/.*.mjs",
    "./**/*.jsx",
    "./**/.*.jsx",
    "./**/*.ts",
    "./**/.*.ts",
    "./**/*.cts",
    "./**/.*.cts",
    "./**/*.mts",
    "./**/.*.mts",
    "./**/*.tsx",
    "./**/.*.tsx",
  ],

  "exclude": ["build", "scripts"],
}

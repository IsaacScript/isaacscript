{
  "extends": [
    "../isaacscript-tsconfig/tsconfig.node.json",
    "../../tsconfig.monorepo.json",
  ],

  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "outDir": "dist",

    // We have to enable some compiler options because they are used by "isaacscript-common" and we
    // import code from that package.
    "experimentalDecorators": true,
    "resolveJsonModule": true,
  },

  "include": [
    "./**/*.js",
    "./**/.*.js",
    "./**/*.cjs",
    "./**/.*.cjs",
    "./**/*.mjs",
    "./**/.*.mjs",
    "./**/*.jsx",
    "./**/.*.jsx",
    "./**/*.ts",
    "./**/.*.ts",
    "./**/*.cts",
    "./**/.*.cts",
    "./**/*.mts",
    "./**/.*.mts",
    "./**/*.tsx",
    "./**/.*.tsx",
  ],

  "exclude": ["dist", "file-templates"],
}

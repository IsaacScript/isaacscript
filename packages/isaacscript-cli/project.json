{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/isaacscript-cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/isaacscript-cli",
        "main": "packages/isaacscript-cli/src/main.ts",
        "tsConfig": "packages/isaacscript-cli/tsconfig.lib.json",
        "assets": [
          "packages/isaacscript-cli/*.md",
          "packages/isaacscript-cli/file-templates/**",
          "packages/isaacscript-cli/isaacscript-watcher/**"
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "ts-node --project tools/scripts/tsconfig.json tools/scripts/publish.ts isaacscript-cli"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/isaacscript-cli/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/isaacscript-cli"],
      "options": {
        "jestConfig": "packages/isaacscript-cli/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
